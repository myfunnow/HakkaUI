{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // https://github.com/johnsoncodehk/volar/issues/1337#issuecomment-1186233376
  "include": ["src/**/*.js", "src/**/*.vue"],
  "exclude": ["./dist/**/*"]
}
