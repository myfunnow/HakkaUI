{
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.vue"],
  "exclude": [
    "node_modules",
    "__snapshots__",
    "**/*.stories.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/types",
    "paths": { "@/*": ["./src/*"] },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": ["vite/client", "naive-ui/volar", "vitest/globals", "node"]
  }
}
