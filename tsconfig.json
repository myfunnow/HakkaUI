{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["./src/**/*.js", "./src/**/*.ts", "./src/**/*.vue", "./dev/**/*.ts", "./dev/**/*.vue"],
  "exclude": ["./dist/**/*", "/blueprint-templates/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["vite/client", "naive-ui/volar", "vitest/globals", "node"],
    "useDefineForClassFields": true,
  }
}
